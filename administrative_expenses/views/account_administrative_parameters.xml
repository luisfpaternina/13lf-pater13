<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>

        <record id="view_administrative_parameters_tree" model="ir.ui.view">
            <field name="name">administrative.parameters.tree</field>
            <field name="model">administrative.parameters</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_administrative_parameters_form" model="ir.ui.view">
            <field name="name">administrative.parameters.form</field>
            <field name="model">administrative.parameters</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="delegation_form">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td>
                                            <field name="name" required="1" placeholder="Name"/>
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="valite" invisible="1"/>
                                <field name="create_date"/>
                                <field name="__last_update"/>
                            </group>
                            <group>
                                <field name="expense_name"/>
                                <field name="expense_days"/>
                            </group>
                            <group>
                                
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_view_administrative_parameters">
            <field name="name">Administrative parameters</field>
            <field name="res_model">administrative.parameters</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create new record
                </p>
            </field>
        </record>

        <menuitem 
            id="menu_administrative_parameters" 
            name="Administrative parameters" 
            parent="account.menu_finance_configuration"
            action="action_view_administrative_parameters"
            />

    </data>
</odoo> 